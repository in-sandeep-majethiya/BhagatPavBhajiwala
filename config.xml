<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.bhagatpavbhajiwala" versionCode = "0.1" 
    version="0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bhagat Pavbhajiwala</name>
    <description>
        Pav bhaji is more than a mere snack! it’s a quick meal that can be grabbed on the go – since large potions of the bhaji are made in advance and simply reheated with a few spices before serving.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Bhagat Pavbhajiwala
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="10000" />
</widget>
